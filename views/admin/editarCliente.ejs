<%- include('../partials/header') -%>

<main class="admin-dashboard full-height">
  <section class="hero">
    <section class="titles">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <h1>ÁREA DO CLIENTE</h1>
            <h2>Escolha abaixo qual informação deseja consultar ou editar.</h2>
          </div>
        </div>
      </div>
    </section>

    <%- include('../partials/admin/header-admin') -%>

  </section>

  <section class="admin-container admin-form-supplier">
    <form method="POST" action="/admin/editarCliente/<%= cliente.id %>?_method=PUT" class="needs-validation" novalidate>
      
      <div class="container card">
        
        <div class="row">
          <div class="col-12 text-center mb-3">
            <h2>Editar Cliente</h2>
            <p>Edite abaixo os dados do cliente.</p>
          </div>
        </div>

        <div class="row">
        
          <div class="col-12">
            <div class="form-group">
              <input type="text" id="name" name="name" class="form-control" placeholder="Nome do Responsável" value= "<%= cliente.usuario.nome %>" required>
              <div class="invalid-feedback">Campo obrigatório</div>

            </div>
          </div>

          <div class="col-12">
            <div class="form-group">
              <input type="email" name="email" id="email" class="form-control" placeholder="E-mail" value= "<%= cliente.usuario.email %>"required>
              <div class="invalid-feedback">Campo obrigatório</div>
            </div>
          </div>

          <div class="col-sm-12 col-md-6">
            <div class="form-group">
              <input type="text" name="phone" id="phone" class="form-control" placeholder="Telefone (Opcional)" value= "<%= cliente.telefone %>">
            </div>
          </div>

          <div class="col-sm-12 col-md-6">
            <div class="form-group">
              <input type="text" name="whatsapp" id="whatsapp" class="form-control" placeholder="WhatsApp (Opcional)"  value= "<%= cliente.whatsapp %>">
            </div>
          </div>

          <div class="col-sm-12 col-md-6">
            <div class="form-group">
              <input type="password" id="password" name="password" class="form-control" placeholder="Senha"  required>
              <div class="invalid-feedback">Campo obrigatório</div>
            </div>
          </div>

          <div class="col-sm-12 col-md-6">
            <div class="form-group">
              <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirmar Senha"  required>
              <div class="invalid-feedback confirm-password">A senha não é igual</div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-12 text-center my-3">
            <h2>Localização</h2>
            <p>Edite abaixo os dados de endereço.</p>
          </div>

          <div class="col-sm-12 col-md-4">
            <div class="form-group">
              <input type="text" id="zipcode" name="zipcode" class="form-control" placeholder="CEP" value= "<%= cliente.endereco.cep %>" required>
              <div class="invalid-feedback">Campo obrigatório</div>
            </div>
          </div>

          <div class="col-sm-12 col-md-8">
            <div class="form-group">
              <input type="text" id="address" name="address" class="form-control" placeholder="Logradouro" value= "<%= cliente.endereco.logradouro %>" required>
              <div class="invalid-feedback">Campo obrigatório</div>
            </div>
          </div>

          <div class="col-sm-12 col-md-4">
            <div class="form-group">
              <input type="number" id="numero" name="number" class="form-control" placeholder="Número" value= "<%= cliente.endereco.numero %>" required>
              <div class="invalid-feedback">Campo obrigatório</div>
            </div>
          </div>

          <div class="col-sm-12 col-md-4">
            <div class="form-group">
              <input type="text" id="complement" name="complement" class="form-control" placeholder="Complemento" value= "<%= cliente.endereco.complemento %>">
            </div>
          </div>

          <div class="col-sm-12 col-md-4">
            <div class="form-group">
              <input type="text" id="district" name="district" class="form-control" placeholder="Bairro" value= "<%= cliente.endereco.estado %>" required>
              <div class="invalid-feedback">Campo obrigatório</div>
            </div>
          </div>

          <div class="col-sm-12 col-md-4">
            <div class="form-group">
              <select id="state" name="state" class="form-control" required>
                <option disabled >Estado</option>
                <option value="AC" <% (cliente.endereco.estado === 'AC')? 'selected':'' %>>Acre</option>
                <option value="AL" <% (cliente.endereco.estado === 'AL')?'selected':'' %>>Alagoas</option>
                <option value="AP" <% (cliente.endereco.estado === 'AP')?'selected':'' %>>Amapá</option>
                <option value="AM" <% (cliente.endereco.estado === 'AM')?'selected':'' %>>Amazonas</option>
                <option value="BA" <% (cliente.endereco.estado === 'BA')?'selected':'' %>>Bahia</option>
                <option value="CE" <% (cliente.endereco.estado === 'CE')?'selected':'' %>>Ceará</option>
                <option value="DF" <% (cliente.endereco.estado === 'DF')?'selected':'' %>>Distrito Federal</option>
                <option value="ES" <% (cliente.endereco.estado === 'ES')?'selected':'' %>>Espírito Santo</option>
                <option value="GO" <% (cliente.endereco.estado === 'GO')?'selected':'' %>>Goiás</option>
                <option value="MA" <% (cliente.endereco.estado === 'MA')?'selected':'' %>>Maranhão</option>
                <option value="MT" <% (cliente.endereco.estado === 'MT')?'selected':'' %>>Mato Grosso</option>
                <option value="MS" <% (cliente.endereco.estado === 'MS')?'selected':'' %>>Mato Grosso do Sul</option>
                <option value="MG" <% (cliente.endereco.estado === 'MG')?'selected':'' %>>Minas Gerais</option>
                <option value="PA" <% (cliente.endereco.estado === 'PA')?'selected':'' %>>Pará</option>
                <option value="PB" <% (cliente.endereco.estado === 'PB')?'selected':'' %>>Paraíba</option>
                <option value="PR" <% (cliente.endereco.estado === 'PR')?'selected':'' %>>Paraná</option>
                <option value="PE" <% (cliente.endereco.estado === 'PE')?'selected':'' %>>Pernambuco</option>
                <option value="PI" <% (cliente.endereco.estado === 'PI')?'selected':'' %>>Piauí</option>
                <option value="RJ" <% (cliente.endereco.estado === 'RJ')?'selected':'' %>>Rio de Janeiro</option>
                <option value="RN" <% (cliente.endereco.estado === 'RN')?'selected':'' %>>Rio Grande do Norte</option>
                <option value="RS" <% (cliente.endereco.estado === 'RS')?'selected':'' %>>Rio Grande do Sul</option>
                <option value="RO" <% (cliente.endereco.estado === 'RO')?'selected':'' %>>Rondônia</option>
                <option value="RR" <% (cliente.endereco.estado === 'RR')?'selected':'' %>>Roraima</option>
                <option value="SC" <% (cliente.endereco.estado === 'SC')?'selected':'' %>>Santa Catarina</option>
                <option value="SP" <% (cliente.endereco.estado === 'SP')?'selected':'' %>>São Paulo</option>
                <option value="SE" <% (cliente.endereco.estado === 'SE')?'selected':'' %>>Sergipe</option>
                <option value="TO" <% (cliente.endereco.estado === 'TO')?'selected':'' %>>Tocantins</option>
              </select>
              <div class="invalid-feedback">Campo obrigatório</div>
            </div>
          </div>

          <div class="col-sm-12 col-md-8">
            <div class="form-group">
              <input type="text" id="city" name="city" class="form-control" placeholder="Cidade" value= "<%= cliente.endereco.cidade %>" required>
              <div class="invalid-feedback">Campo obrigatório</div>
            </div>
          </div>
        </div>

      

        <div class="row mt-3">
          <div class="col-sm-12 col-md-6">
            <a href="/admin/listarCliente" class="btn btn-solid btn-orange2"><i class="fas fa-arrow-left"></i> Voltar</a>
            <button class="btn btn-solid btn-orange1"><i class="far fa-trash-alt"></i> Excluir</button>
          </div>
          <div class="col-sm-12 col-md-6 text-right">
            <button id="send" class="btn btn-solid btn-blue1"><i class="far fa-save"></i> Salvar</button>
          </div>
        </div>
      </div>

      </div>
    </form>
  </section>
</main>

<%- include('../partials/footer') -%>

<script>
  utils.formValidation();
  utils.comparePasswords();
</script>