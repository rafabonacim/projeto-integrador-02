<%- include('../partials/header') -%>

<main class="admin-dashboard full-height">
    <section class="hero">
      <section class="titles">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <h1>ÁREA DO CLIENTE</h1>
              <h2>Escolha abaixo qual informação deseja consultar ou editar.</h2>
            </div>
          </div>
        </div>
      </section>
  
      <%- include('../partials/admin/header-admin') -%>

    </section>

    <section class="admin-container admin-list-client">
      <form class="needs-validation" novalidate>
        <div class="container card">
          
          <div class="row">
            <div class="col-12 text-center mb-3">
              <h2>Lista de Orçamentos</h2>
            </div>
          </div>
          
          <div class="row">
            <div class="col-sm-12 col-md-3">
              <div class="form-group">
                <input type="date" id="date" class="form-control" placeholder="Data">
              </div> 
            </div>

            <div class="col-sm-12 col-md-3">
              <div class="form-group">
                <input type="name" name="name" class="form-control" placeholder="Cliente">
              </div> 
            </div>

            <div class="col-sm-12 col-md-3">
              <div class="form-group">
                <input type="email" name="email" class="form-control" placeholder="Email">
              </div>
            </div>
            
            <div class="col-sm-12 col-md-3">
              <div class="form-group">
                <button type="submit" class="btn btn-solid btn-blue1"><i class="fas fa-search"></i> Procurar</button>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-12">
              <table class="table table-bordered table-responsive-sm">
                <thead>
                  <tr>
                    <th scope="col">Data</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% orcamentos.forEach(orcamento => { %>                
                  <tr>
                    <td><%= orcamento.createdAt %></td>
                    <td><%= orcamento.orcamento_cliente.usuario.nome %></td>
                    <td><%= orcamento.orcamento_cliente.usuario.email %></td>
                    <td class="table-actions">
                      <a href="/admin/orcamentoDetalhado/<%= orcamento.id %>" title="Detalhes"><i class="fas fa-info-circle color-orange2"></i></a>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
  
        <div class="container mb-3">
          <div class="row">
            <div class="col-sm-12">
              <nav class="pagination-container">
                <ul class="pagination">
                  <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Anterior</a>
                  </li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item active" aria-current="page">
                    <a class="page-link" href="#">2</a>
                  </li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item">
                    <a class="page-link" href="#">Próxima</a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
  
      </form>
    </section>
  </main>

<%- include('../partials/footer') -%>