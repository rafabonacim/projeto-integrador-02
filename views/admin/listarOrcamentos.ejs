      <%- include('../partials/admin/header-admin') -%>

    </section>

    <section class="admin-container admin-list-client">
      <form class="needs-validation" novalidate>
        <div class="container card">
          
          <div class="row">
            <div class="col-12 text-center mb-3">
              <h2>Lista de Orçamentos</h2>
            </div>
          </div>
          
          <div class="row">
            <div class="col-sm-12 col-md-3">
              <div class="form-group">
                <select name="chooseBranch" class="form-control" required>
                  <option disabled selected>Ramo</option>
                  <option value="usinagem">Usinagem</option>
                  <option value="micro-usinagem">Micro usinagem</option>
                </select>
              </div> 
            </div>

            <div class="col-sm-12 col-md-3">
              <div class="form-group">
                <input type="name" name="name" class="form-control" placeholder="Cliente">
              </div> 
            </div>

            <div class="col-sm-12 col-md-3">
              <div class="form-group">
                <input type="date" id="date" class="form-control" placeholder="Data">
              </div> 
            </div>

            <div class="col-sm-12 col-md-3">
              <div class="form-group">
                <input type="email" name="email" class="form-control" placeholder="Email">
              </div> 
            </div>
          </div>
          
          <div class="collapse-forms">
            <div id="filters" class="row collapse">
              <div class="col-sm-12 col-md-3">
                <div class="form-group">
                  <select name="chooseMaterial" class="form-control" required>
                    <option disabled selected>Matéria Prima</option>
                    <option value="material-de-usinagem-1">Material de usinagem 1</option>
                    <option value="material-de-usinagem-2">Material de usinagem 2</option>
                    <option value="material-de-usinagem-3">Material de usinagem 3</option>
                    <option value="material-de-usinagem-4">Material de usinagem 4</option>
                  </select>
                </div>
              </div>

              <div class="col-sm-12 col-md-3">
                <div class="form-group">
                  <input type="tel" name="phone" maxlength="16" class="form-control" placeholder="Telefone (com DDD)">
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-12">
              <div class="form-group">
                <a class="btn btn-solid btn-orange1 my-3" data-toggle="collapse" href="#filters" role="button" aria-expanded="false" aria-controls="filters"><i class="fas fa-plus"></i> Filtros</a>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-12">
              <table class="table table-bordered table-responsive-sm">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Cliente</th>
