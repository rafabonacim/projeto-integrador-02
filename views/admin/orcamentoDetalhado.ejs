<%- include('../partials/header') -%>

<main class="admin-dashboard full-height">
    <section class="hero">
      <section class="titles">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <h1>ÁREA DO CLIENTE</h1>
              <h2>Escolha abaixo qual informação deseja consultar ou editar.</h2>
            </div>
          </div>
        </div>
      </section>
  
      <%- include('../partials/admin/header-admin') -%>

    </section>

    <section class="quote-form">
      <div class="container card">
        <div class="row">
          <div class="col-12 text-center mb-5">
            <h2>Detalhes do Orçamento</h2>
          </div>
        </div>  

        <div class="row budget-margin">
          <div class="col-12">
            <h3 class="color-orange1">Dados do Produto</h3>
          </div>
        </div> 

        <div class="row">
          <div class="col-sm-12 col-md-3 col-lg-3">
            <p><strong class="color-blue2">Quantidade: </strong><%= orcamento.quantidade %></p>
          </div>

          <div class="col-sm-12 col-md-5 col-lg-4">
            <p><strong class="color-blue2">Prazo para entrega: </strong><%= orcamento.prazo %></p>
          </div>

          <div class="col-sm-12 col-md-4 col-lg-4">
            <p><strong class="color-blue2">Matéria prima: </strong><%= orcamento.materia_prima %></p>
          </div>
        </div> 

        <div class="row">
          <div class="col-12">
            <p><strong class="color-blue2">Mais detalhes: </strong><%= orcamento.detalhes %></p>
          </div>
        </div>

        <div class="row divider">
          <div class="col-12">
            <hr>
          </div>
        </div>

        <div class="row budget-margin">
          <div class="col-12">
            <h3 class="color-orange1">Dados do Cliente</h3>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12 col-md-6 col-lg-5">
            <p><strong class="color-blue2">Nome do Responsável: </strong><%= orcamento.orcamento_cliente.usuario.nome %></p>
          </div>

          <div class="col-sm-12 col-md-6 col-lg-5">
            <p><strong class="color-blue2">E-mail: </strong><%= orcamento.orcamento_cliente.usuario.email %></p>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12 col-md-5 col-lg-4">
            <p><strong class="color-blue2">Telefone: </strong><%= orcamento.orcamento_cliente.telefone %></p>
          </div>

          <div class="col-sm-12 col-md-5 col-lg-4">
            <p><strong class="color-blue2">WhatsApp: </strong><%= orcamento.orcamento_cliente.whatsapp %></p>
          </div>
        </div>

        <div class="row">
          <div class="col-12 d-flex justify-content-between">
            <a href="/admin/listarOrcamentos" class="btn btn-solid btn-orange1"><i class="fas fa-arrow-left"></i> Voltar</a>
          </div>
        </div>

      </div>

    </section>

<%- include('../partials/footer') -%>