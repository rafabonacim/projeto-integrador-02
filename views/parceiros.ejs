<%- include('partials/header') -%>
<main>
    <section class="hero full-height-hero">
        <section class="titles">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h1>CONHEÇA NOSSOS PARCEIROS</h1>
                        <h2>Essas são todas as empresas que irão receber o seu orçamento</h2>
                        <h2>A Porca e o Parafuso agradece a parceria de distintas empresas do <span>setor de usinagem</span>, seja tambem um parceiro.</h2>
                    </div>
                </div>
            </div>
        </section>

        <section class="partners-form">
            <form action="/parceiros/resultado" method="GET" novalidate>
                <div class="container card">

                    <div id="filterResults" class="row list-filters">
                        <div class="col-sm-12 col-md">
                            <div class="form-group">
                                <input type="search" class="form-control" placeholder="Nome" name="name" />
                            </div>
                        </div>

                        <div class="col-sm-12 col-md">
                            <div class="form-group">
                                <select id="disabledSelect" name="state" class="form-control">
                                    <option selected disabled>Estado</option>
                                    <option value="AC">AC</option>
                                    <option value="AL">AL</option>
                                    <option value="AP">AP</option>
                                    <option value="AM">AM</option>
                                    <option value="BA">BA</option>
                                    <option value="CE">CE</option>
                                    <option value="DF">DF</option>
                                    <option value="ES">ES</option>
                                    <option value="GO">GO</option>
                                    <option value="MA">MA</option>
                                    <option value="MT">MT</option>
                                    <option value="MS">MS</option>
                                    <option value="MG">MG</option>
                                    <option value="PA">PA</option>
                                    <option value="PB">PB</option>
                                    <option value="PR">PR</option>
                                    <option value="PE">PE</option>
                                    <option value="PI">PI</option>
                                    <option value="RJ">RJ</option>
                                    <option value="RN">RN</option>
                                    <option value="RS">RS</option>
                                    <option value="RO">RO</option>
                                    <option value="RR">RR</option>
                                    <option value="SC">SC</option>
                                    <option value="SP">SP</option>
                                    <option value="SE">SE</option>
                                    <option value="TO">TO</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-auto">
                            <div class="form-group">
                                <button type="search" class="btn btn-solid btn-blue1"><i class="fas fa-search"></i> Procurar</button>
                            </div>
                        </div>
                    </div>

                    <div class="partners-list">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Cidade</th>
                                    <th scope="col">Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% fornecedores.forEach(fornecedor => { %>
                                <tr>
                                    <th scope="row"><%= fornecedor.usuario.nome %></th>
                                    <td><%= fornecedor.endereco.cidade %></td>
                                    <td><%= fornecedor.endereco.estado %></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
        </section>
    </section>
</main>

<%- include('partials/footer') -%>