<%- include('partials/header') -%>

<main>
    <section class="hero full-height-hero">
        <section class="titles">
            <div class="container">
                <div class="row">
                <div class="col-12">
                    <h1>LOGIN</h1>
                    <h2>Use o seu e-mail e senha para entrar</h2>
                </div>
                </div>
            </div>
        </section>

        <section class="login-form">
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="container card">

                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <input type="email" id="email" name="email" class=form-control placeholder="E-mail" required>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <input type="password" id="password" name="password" class=form-control placeholder="Senha" required>
                            </div>
                            
                            <div class="forgot-login">
                                <a href="/esqueci-senha">Esqueceu sua senha?</a>  
                            </div>                         
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <button class="btn btn-solid btn-orange1"><i class="fas fa-sign-in-alt"></i> Entrar</button>
                            </div>
                            <div class="divider">
                                <hr>    
                            </div>
                            <div>
                                <p class="no-margin-bottom">NÃ£o tem cadastro? <a href="/perfilCadastro">Increva-se</a></p>
                            </div>
                        </div>
                        
                    </div>
                </div>
                
            </form>

        </section>
    </section>
</main>
<%- include('partials/footer') -%>